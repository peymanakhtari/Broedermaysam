@using System.Globalization

<!DOCTYPE html>

<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta content="IE=edge" http-equiv="X-UA-Compatible">
    <meta content="width=device-width,initial-scale=1" name="viewport">
    <meta content="Maysam Zahiri , verpleegkundige diensten in oss" name="description">

    <meta name="google" content="notranslate" />
    <meta content="Mashup templates have been developped by Orson.io team" name="author">
    <link href="/content/bootstrap.min.css" rel="stylesheet" />
    <script src="/content/Jquery.min.js"></script>
    <script src="/content/popper.min.js"></script>
    <script src="/content/bootstrap.min.js"></script>
    <style>
        .red {
            color: red;
        }
    </style>
    <link rel="icon" href="icon_path" type="image/icon type">

    <!-- Disable tap highlight on IE -->
    <meta name="msapplication-tap-highlight" content="no">


    <title>Broeder Maysam - Zahiri</title>

    <script type="text/javascript" src="/js/main.js"></script>
    <script type="text/javascript" src="/js/JavaScript.js"></script>

</head>

<body class="">

    <div class="background-color-layer"></div>
    <main class="content-wrapper">
        <header class="white-text-container section-container">
            <div class="text-center">
                <h1 id="broedermaysam" style="display: none">Broeder Maysam</h1>
                <div id="social_links">
                    <a class="fa-icon fa-icon-2x" href="https://wa.me/+31647045888?text=" title="">
                        <i class="fa fa-whatsapp"></i>
                    </a>
                    <a class="fa-icon fa-icon-2x" href="https://www.facebook.com/maysam.zahiri" title="">
                        <i class="fa fa-facebook"></i>
                    </a>
                    <a class="fa-icon fa-icon-2x" href="https://www.instagram.com/maysamzahiri/?hl=en" title="">
                        <i class="fa fa-instagram"></i>
                    </a>

                    <a class="fa-icon fa-icon-2x"
                        href="https://nl.linkedin.com/in/maysam-zahiri-7a54861b3/en?trk=people-guest_people_search-card&original_referer=https%3A%2F%2Fwww.linkedin.com%2F"
                        title="">
                        <i class="fa fa-linkedin"></i>
                    </a>

                    <div style="display: none !important" id="dropdown" class="dropdown">
                        <button type="button" class="btn  p-1 btn-change-lang" data-toggle="dropdown">
                            @if (CultureInfo.CurrentCulture.Name == "nl")
                            {
                                <img style="width:45px" src="/img/NlFalg.png" />
                            }
                            else
                            {
                                <img style="width:45px" src="/img/EnFlag.png" />
                            }
                        </button>
                        <ul class="dropdown-menu py-1 " style="min-width:50px;max-width:50px">
                            <li class="nav-link p-0 ">
                                <a class="px-2 py-0" asp-action="SetCulture" asp-controller="Culture"
                                    asp-route-culture="nl" asp-route-returnUrl="@Context.Request.Path">
                                    <img style="width:40px" src="/img/NlFalg.png" alt="Dutch" />
                                </a>
                            </li>
                            <li class="nav-link p-0">
                                <a class="px-2 py-0" asp-action="SetCulture" asp-controller="Culture"
                                    asp-route-culture="en" asp-route-returnUrl="@Context.Request.Path">
                                    <img style="width:40px" src="/img/EnFlag.png" alt="English" />
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>

            </div>
        </header>

        <!-- Add your site or app content here -->

        <div class="container">
            <div class="row">
                <div id="" class="col-xs-12">
                    @RenderBody()
                </div>
            </div>
        </div>

    </main>


    <script>
        document.addEventListener("DOMContentLoaded", function (event) {
            scrollRevelation('.card');
        });
        window.onload=function(){
            $('#broedermaysam').css('display','block')
            $('#dropdown').css('display','block')
                    var service = getParameterByName('service');
        $('#' + service).css('opacity', '.2');
        $('#' + service).css('font-size', '13px');
        document.getElementById(service).scrollIntoView({ behavior: "smooth", block: "center" });
        $('#' + service).animate({ opacity: "1", fontSize: "25px" }, 2000);
        }
    </script>
    <style>
        #social_links {
            display: none;
        }
    </style>
</body>

</html>